{
  "name": "app",
  "version": "0.0.0",
  "private": true,
  "description": "Starter project for an ES6 RESTful Express API",
  "main": "dist",
  "scripts": {
    "start": "node ./dist/server.js",
    "prod": "npm run build && npm start",
    "dev": "./node_modules/.bin/nodemon ./src/server.js",
    "dev:debug": "DEBUG=app:* ./node_modules/.bin/nodemon ./src/index.js",
    "clean": "rimraf dist",
    "build": "npm run clean && mkdir -p dist && babel src -s -D -d dist",
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "esw src test",
    "lint:watch": "esw -w src test",
    "pm2": "npm run build && pm2 start pm2.json --env production"
  },
  "author": "Madhusudhan Srinivasa <madhums8@gmail.com> (http://madhums.github.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/madhums/node-express-mongoose-demo.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">= 7.7.x",
    "mongodb": ">= 3.x",
    "redis": ">= 3.x"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.0",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-beta.2",
    "cors": "^2.8.3",
    "csurf": "^1.9.0",
    "debug": "^2.6.8",
    "express": "^4.13.4",
    "express-jwt": "^5.3.0",
    "express-session": "^1.15.3",
    "express-validation": "^1.0.2",
    "express-winston": "^2.4.0",
    "helmet": "^3.6.1",
    "http-status": "^1.0.1",
    "jade": "~1.11.0",
    "joi": "^10.5.1",
    "jsonwebtoken": "^7.4.1",
    "lodash": "^4.17.4",
    "method-override": "^2.3.9",
    "mongoose": "^4.10.2",
    "morgan": "^1.7.0",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "redis": "^2.7.1",
    "serve-favicon": "^2.3.2",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.5.1",
    "babel-register": "^6.24.1",
    "cross-env": "^5.0.0",
    "dotenv": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-watch": "^3.1.0",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0"
  }
}
